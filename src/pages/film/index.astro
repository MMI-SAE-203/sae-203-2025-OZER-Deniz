---
import Base from "../../layouts/Layout.astro";
import Card from "../../components/Card.astro";
import { allFilms } from "../../../backend/backend.mjs";
import HeroImage from "../../assets/hero-3.avif";
import { Image } from "astro:assets";

const films = await allFilms();
---

<Base titre="PROGRAMME - Films">
    <div class="mt-100">
        <section
            class="relative w-full h-96 flex items-center justify-center text-center text-white bg-cover bg-center"
        >
            <Image
                src={HeroImage}
                alt="Festival Ça va Trail'er"
                width={1920}
                height={1080}
                class="absolute inset-0 w-full h-96 object-cover"
            />
            <div class="absolute inset-0 bg-black bg-opacity-20"></div>

            <div class="relative z-10 px-8 max-w-4xl">
                <h1
                    class="text-6xl md:text-8xl font-extrabold uppercase tracking-wide"
                >
                    Films
                </h1>
                <p
                    class="mt-4 text-2xl md:text-3xl font-semibold text-orange-500 bg-white px-4 py-2 rounded-md inline-block"
                >
                    Découvrez notre sélection de films
                </p>
            </div>
        </section>

        <section class="max-w-6xl mx-auto my-12 px-6 text-center">
            <h1 class="text-5xl font-bold text-orange-600 mb-8">Films</h1>
            <div class="grid md:grid-cols-3 gap-12">
                {
                    films.map((film) => (
                        <Card
                            titre={film.titre_film}
                            diffusion={film.diffusion_film}
                            affiche={film.affiche_film}
                            collectionId="Film"
                            recordId={film.id}
                        />
                    ))
                }
            </div>
        </section>
    </div>
</Base>
