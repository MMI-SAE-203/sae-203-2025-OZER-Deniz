---
import Base from "../layouts/Layout.astro";
import HeroImage from "../assets/hero-3.avif";
import { Image } from "astro:assets";
---

<Base titre="NEWSLETTER - Ça va Trail'er">
    <div class="mt-100">
        <section
            class="relative w-full h-[90vh] flex items-center justify-center text-center text-white bg-cover bg-center overflow-hidden"
        >
            <Image
                src={HeroImage}
                alt="Paysage naturel avec randonneurs"
                width={1920}
                height={1080}
                class="absolute inset-0 w-full h-full object-cover object-center md:object-top"
            />

            <div
                class="absolute inset-0 bg-black bg-opacity-10 backdrop-blur-lg"
            >
            </div>

            <div class="relative z-10 px-8 max-w-4xl">
                <h1
                    class="text-6xl md:text-8xl font-extrabold uppercase tracking-wide"
                >
                    Newsletter
                </h1>
                <p
                    class="mt-4 text-2xl md:text-3xl font-semibold text-orange-500 bg-white px-4 py-2 rounded-md inline-block"
                >
                    Restez informé de nos dernières actualités
                </p>
            </div>
        </section>

        <section class="max-w-4xl mx-auto my-12 px-6 text-center">
            <h1 class="text-3xl font-bold text-orange-600 mb-4">
                Inscrivez-vous à notre Newsletter
            </h1>
            <p class="text-lg text-gray-700 mb-8">
                Recevez les dernières nouvelles et mises à jour sur le festival
                directement dans votre boîte mail.
            </p>

            <div class="flex flex-col md:flex-row items-start gap-10">
                <form
                    class="flex-1 space-y-4 bg-white shadow-lg p-6 rounded-lg"
                >
                    <div>
                        <label for="name" class="block font-bold text-gray-700"
                            >Nom</label
                        >
                        <input
                            type="text"
                            id="name"
                            name="name"
                            placeholder="Votre nom"
                            class="w-full px-4 py-2 border border-orange-400 rounded-md focus:ring-2 focus:ring-orange-500"
                        />
                    </div>

                    <div>
                        <label for="email" class="block font-bold text-gray-700"
                            >Email</label
                        >
                        <input
                            type="email"
                            id="email"
                            name="email"
                            placeholder="Votre email"
                            class="w-full px-4 py-2 border border-orange-400 rounded-md focus:ring-2 focus:ring-orange-500"
                        />
                    </div>

                    <button
                        type="submit"
                        class="w-full bg-orange-500 text-white font-bold py-2 rounded-md transition duration-300 hover:bg-orange-600"
                    >
                        S'inscrire
                    </button>
                </form>

                <div
                    class="flex-1 bg-gray-100 p-6 rounded-lg shadow-lg text-left"
                >
                    <h3 class="text-orange-600 text-lg font-bold mb-2">
                        Pourquoi s'inscrire ?
                    </h3>
                    <p class="text-gray-700">
                        En vous inscrivant à notre newsletter, vous recevrez :
                    </p>
                    <ul class="list-disc list-inside text-gray-700 mt-4">
                        <li>Les dernières nouvelles sur le festival</li>
                        <li>Des informations exclusives sur les invités</li>
                        <li>Des offres spéciales et des promotions</li>
                        <li>Et bien plus encore !</li>
                    </ul>
                </div>
            </div>
        </section>
    </div>
</Base>
