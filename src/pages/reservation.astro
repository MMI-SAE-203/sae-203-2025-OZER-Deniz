---
import Base from "../layouts/Layout.astro";
import HeroImage from "../assets/hero-2.avif";
import { Image } from "astro:assets";
---

<Base titre="Réservation">
    <section
        class="relative w-full h-screen flex items-center justify-center text-center text-white bg-cover bg-center"
    >
        <Image
            src={HeroImage}
            alt="Festival Ça va Trail'er"
            width={1920}
            height={1080}
            class="absolute inset-0 w-full h-screen object-cover"
        />
        <div class="absolute inset-0 bg-black bg-opacity-50"></div>

        <div class="relative z-10 px-8 max-w-4xl">
            <h1 class="text-6xl md:text-7xl font-bold uppercase tracking-wide">
                Réservation
            </h1>
            <p class="mt-4 text-2xl md:text-3xl font-semibold text-orange-500">
                Réservez vos billets pour le festival
            </p>
        </div>
    </section>

    <section class="bg-gray-100 py-24">
        <div class="max-w-6xl mx-auto px-6 text-center">
            <h2 class="text-5xl font-bold text-orange-600">
                Réservez vos billets
            </h2>
            <p class="mt-6 text-xl text-gray-800">
                Choisissez vos billets et réservez dès maintenant.
            </p>
            <div class="mt-8 text-left">
                <form
                    class="max-w-3xl mx-auto bg-white p-8 shadow-lg rounded-lg"
                >
                    <div class="mb-6">
                        <label
                            for="name"
                            class="block text-lg font-medium text-gray-700"
                            >Nom</label
                        >
                        <input
                            type="text"
                            id="name"
                            name="name"
                            class="mt-2 p-3 w-full border border-gray-300 rounded-lg"
                            required
                        />
                    </div>
                    <div class="mb-6">
                        <label
                            for="email"
                            class="block text-lg font-medium text-gray-700"
                            >Email</label
                        >
                        <input
                            type="email"
                            id="email"
                            name="email"
                            class="mt-2 p-3 w-full border border-gray-300 rounded-lg"
                            required
                        />
                    </div>
                    <div class="mb-6">
                        <label
                            for="ticket-type"
                            class="block text-lg font-medium text-gray-700"
                            >Type de billet</label
                        >
                        <select
                            id="ticket-type"
                            name="ticket-type"
                            class="mt-2 p-3 w-full border border-gray-300 rounded-lg"
                            required
                        >
                            <option value="journalier">Billet journalier</option
                            >
                            <option value="3-jours">Abonnement 3 jours</option>
                            <option value="semaine">Abonnement semaine</option>
                        </select>
                    </div>
                    <div class="mb-6">
                        <label
                            for="quantity"
                            class="block text-lg font-medium text-gray-700"
                            >Quantité</label
                        >
                        <input
                            type="number"
                            id="quantity"
                            name="quantity"
                            class="mt-2 p-3 w-full border border-gray-300 rounded-lg"
                            min="1"
                            required
                        />
                    </div>
                    <div class="text-center">
                        <button
                            type="submit"
                            class="bg-orange-600 text-white font-bold py-4 px-8 rounded-lg text-lg transition transform hover:scale-105 hover:bg-orange-700"
                        >
                            Réserver
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</Base>
