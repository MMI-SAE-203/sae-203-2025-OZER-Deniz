---
import Logo from "../assets/logo.svg";
---

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const dropdownBtn = document.getElementById("dropdown-btn");
        const dropdownMenu = document.getElementById("dropdown-menu");

        dropdownBtn.addEventListener("click", () => {
            dropdownMenu.classList.toggle("hidden");
        });

        const menuBtn = document.getElementById("menu-btn");
        const menu = document.getElementById("menu");

        menuBtn.addEventListener("click", () => {
            menu.classList.toggle("translate-x-full");
        });
    });
</script>

<header class="fixed top-0 left-0 right-0 bg-white shadow-md z-50">
    <div class="flex items-center justify-between px-6 md:px-12 h-20 border-b-4 border-orange-500">

        <a href="/" class="flex items-center gap-4">
            <div class="w-20 h-20 flex-shrink-0 flex items-center justify-center">
                <Logo/>
            </div>
            <span class="text-2xl font-bold text-orange-600 hidden md:block">
                Ça va Trail'er
            </span>
        </a>

        <!-- Bouton Menu Mobile -->
        <button id="menu-btn" class="lg:hidden relative z-50 flex flex-col justify-between w-8 h-6" aria-label="Menu">
            <span class="block w-full h-0.5 bg-orange-600 rounded transition"></span>
            <span class="block w-full h-0.5 bg-orange-600 rounded transition"></span>
            <span class="block w-full h-0.5 bg-orange-600 rounded transition"></span>
        </button>

        <!-- Navigation -->
        <nav id="menu" class="fixed inset-0 bg-white transform translate-x-full transition-transform duration-300 lg:relative lg:translate-x-0 lg:flex lg:items-center lg:bg-transparent">
            <ul class="flex flex-col items-center gap-6 pt-24 lg:flex-row lg:gap-8 lg:pt-0">
                <li class="relative">
                    <button id="dropdown-btn" class="text-lg font-semibold text-gray-700 hover:text-orange-600 transition flex items-center gap-1">
                        Programme
                        <svg class="w-4 h-4 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    <ul id="dropdown-menu" class="absolute left-0 mt-2 w-48 bg-white shadow-xl rounded-lg hidden">
                        <li><a href="/films" class="block px-4 py-2 text-gray-700 hover:bg-orange-100">Films</a></li>
                        <li><a href="/activites" class="block px-4 py-2 text-gray-700 hover:bg-orange-100">Activités</a></li>
                        <li><a href="/invites" class="block px-4 py-2 text-gray-700 hover:bg-orange-100">Invités</a></li>
                    </ul>
                </li>
                <li><a href="/about" class="text-lg font-semibold text-gray-700 hover:text-orange-600 transition">À propos</a></li>
                <li><a href="/contact" class="text-lg font-semibold text-gray-700 hover:text-orange-600 transition">Contact</a></li>
                <li><a href="/newsletter" class="text-lg font-semibold text-gray-700 hover:text-orange-600 transition">Newsletter</a></li>
            </ul>

            <!-- Boutons Connexion/Inscription -->
            <div class="flex flex-col items-center gap-4 mt-8 lg:flex-row lg:mt-0">
                <a href="/login" class="text-orange-600 border-2 border-orange-400 px-6 py-2 rounded-lg font-bold transition hover:bg-orange-100">
                    Connexion
                </a>
                <a href="/signup" class="bg-orange-600 text-white px-6 py-2 rounded-lg font-bold transition hover:bg-orange-700">
                    Inscription
                </a>
            </div>
        </nav>
    </div>
</header>
